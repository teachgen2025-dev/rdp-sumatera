---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Command Center RDP - Batch 1">
    <div class="space-y-6 pb-12">
        
        <div class="bg-gray-900 text-white p-6 rounded-xl shadow-lg">
            <div class="flex flex-col md:flex-row justify-between items-center gap-6">
                <div>
                    <h1 class="text-2xl font-bold tracking-tight text-white">COMMAND CENTER</h1>
                    <p class="text-gray-400 text-sm">Monitoring Terpadu: Respon Darurat Pendidikan</p>
                </div>
                
                <div class="flex gap-8 text-center">
                    <div>
                        <div class="text-3xl font-bold text-green-400" id="globalRelawan">0</div>
                        <div class="text-[10px] uppercase tracking-wider text-gray-500">Total Relawan</div>
                    </div>
                    <div class="border-l border-gray-700 pl-8">
                        <div class="text-3xl font-bold text-orange-400" id="globalPenyintas">0</div>
                        <div class="text-[10px] uppercase tracking-wider text-gray-500">KK Penyintas</div>
                    </div>
                    <div class="border-l border-gray-700 pl-8 hidden md:block">
                        <div class="text-3xl font-bold text-blue-400" id="globalJiwa">0</div>
                        <div class="text-[10px] uppercase tracking-wider text-gray-500">Total Jiwa</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex justify-center">
            <div class="bg-white p-1 rounded-full shadow border inline-flex">
                <button onclick="switchView('relawan')" id="btnRelawan" class="px-6 py-2 rounded-full text-sm font-bold transition-all bg-green-600 text-white shadow">
                    ü§ù Data Relawan
                </button>
                <button onclick="switchView('penyintas')" id="btnPenyintas" class="px-6 py-2 rounded-full text-sm font-bold text-gray-500 hover:bg-gray-100 transition-all">
                    ‚õ∫ Data Penyintas
                </button>
            </div>
        </div>

        <div id="loading" class="text-center py-20 animate-pulse">
            <div class="inline-block w-12 h-12 border-4 border-green-600 border-t-transparent rounded-full animate-spin mb-4"></div>
            <p class="text-gray-500 font-medium">Sinkronisasi Database...</p>
        </div>

        <div id="viewRelawan" class="hidden space-y-6 animate-fade-in">
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                    <h3 class="font-bold text-gray-800 mb-2 border-l-4 border-green-500 pl-3">Sebaran Asal Program</h3>
                    <div class="h-64"><canvas id="chartProgram"></canvas></div>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                    <h3 class="font-bold text-gray-800 mb-2 border-l-4 border-blue-500 pl-3">Peran yang Diminati</h3>
                    <div class="h-64"><canvas id="chartPeran"></canvas></div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                    <h4 class="text-sm font-bold text-gray-600 mb-2">Pernah Respon Bencana?</h4>
                    <div class="h-40"><canvas id="chartPengalaman"></canvas></div>
                </div>
                <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                    <h4 class="text-sm font-bold text-gray-600 mb-2">Durasi Siap</h4>
                    <div class="h-40"><canvas id="chartDurasi"></canvas></div>
                </div>
                <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                    <h4 class="text-sm font-bold text-gray-600 mb-2">Transportasi Pribadi</h4>
                    <div class="h-40"><canvas id="chartTransport"></canvas></div>
                </div>
                <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                    <h4 class="text-sm font-bold text-gray-600 mb-2">Bersedia Tinggal di Lokasi?</h4>
                    <div class="h-40"><canvas id="chartLokasiRelawan"></canvas></div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden flex flex-col h-[600px]">
                <div class="p-4 bg-green-50 border-b border-green-100 flex justify-between items-center shrink-0">
                    <h3 class="font-bold text-green-800">Database Relawan (All Data)</h3>
                    <span class="text-xs text-gray-500 italic">*Scroll ke bawah untuk melihat semua</span>
                </div>
                <div class="overflow-auto flex-grow custom-scrollbar">
                    <table class="w-full text-sm text-left relative">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-100 sticky top-0 z-10 shadow-sm">
                            <tr>
                                <th class="px-4 py-3 bg-gray-100">Nama</th>
                                <th class="px-4 py-3 bg-gray-100">Program</th>
                                <th class="px-4 py-3 bg-gray-100">Domisili</th>
                                <th class="px-4 py-3 bg-gray-100">Detail Pengalaman</th>
                                <th class="px-4 py-3 bg-gray-100">Motivasi</th>
                                <th class="px-4 py-3 bg-gray-100">Siap?</th>
                            </tr>
                        </thead>
                        <tbody id="tableRelawanBody" class="text-gray-700">
                            </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div id="viewPenyintas" class="hidden space-y-6 animate-fade-in">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-white p-6 rounded-xl shadow-sm border border-orange-100">
                    <h3 class="font-bold text-gray-800 mb-2 border-l-4 border-red-500 pl-3">Kebutuhan Logistik</h3>
                    <div class="h-64"><canvas id="chartKebutuhan"></canvas></div>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-sm border border-orange-100">
                    <h3 class="font-bold text-gray-800 mb-2 border-l-4 border-orange-500 pl-3">Lokasi Pengungsian</h3>
                    <div class="h-64 flex justify-center"><canvas id="chartLokasiPenyintas"></canvas></div>
                </div>
            </div>

             <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <div class="bg-white rounded-xl shadow-sm border border-orange-100 lg:col-span-1 flex flex-col h-96">
                    <div class="p-4 bg-orange-50 border-b border-orange-200">
                        <h3 class="font-bold text-orange-800">üì° Live Laporan Kondisi</h3>
                    </div>
                    <div id="feedKondisi" class="flex-grow overflow-y-auto p-4 space-y-3 custom-scrollbar"></div>
                </div>
                <div class="bg-white rounded-xl shadow-sm border border-orange-100 lg:col-span-2 overflow-hidden h-96 flex flex-col">
                    <div class="p-4 bg-orange-50 border-b border-orange-200">
                        <h3 class="font-bold text-orange-800">Database Keluarga Penyintas</h3>
                    </div>
                    <div class="overflow-x-auto flex-grow custom-scrollbar">
                        <table class="w-full text-sm text-left sticky top-0">
                            <thead class="text-xs text-gray-500 uppercase bg-gray-50 sticky top-0">
                                <tr>
                                    <th class="px-4 py-3 bg-gray-50">Nama KK</th>
                                    <th class="px-4 py-3 bg-gray-50 text-center">Jiwa</th>
                                    <th class="px-4 py-3 bg-gray-50">Lokasi</th>
                                    <th class="px-4 py-3 bg-gray-50">Kebutuhan</th>
                                </tr>
                            </thead>
                            <tbody id="tablePenyintasBody" class="text-gray-700"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const API_URL = "https://script.google.com/macros/s/AKfycbxUMAtYm_UqGQpu3sxU2FsgRqDT7Epuvqa79Ia_L6FIVTJ0T2tt4ZVOdqC0RQ1yTbk/exec"; 

        let relawanData = [];
        let penyintasData = [];

        const $ = (id) => document.getElementById(id);
        
        // Helper: Hitung jumlah tag (untuk checkbox/text)
        const countTags = (arr, key) => {
            let c = {};
            arr.forEach(i => {
                if(i[key]) i[key].toString().split(',').forEach(t => {
                    let tag = t.trim(); 
                    if(tag && tag!=='-' && !tag.toLowerCase().includes('lainnya:')) { // Filter text "Lainnya:" agar chart bersih
                        c[tag] = (c[tag]||0)+1;
                    } else if (tag.toLowerCase().includes('lainnya:')) {
                        // Opsional: Kelompokkan semua "Lainnya" jadi satu kategori chart
                        c['Lainnya'] = (c['Lainnya']||0)+1; 
                    }
                });
            });
            return Object.entries(c).sort((a,b)=>b[1]-a[1]);
        };

        // Helper: Create Simple Pie/Doughnut Chart
        const createPie = (canvasId, data, colors) => {
            new Chart($(canvasId), {
                type: 'doughnut',
                data: { 
                    labels: data.map(x=>x[0]), 
                    datasets: [{ data: data.map(x=>x[1]), backgroundColor: colors, borderWidth: 1 }] 
                },
                options: { maintainAspectRatio: false, plugins: { legend: { position: 'bottom', labels:{boxWidth:10} } } }
            });
        };

        window.switchView = (mode) => {
            const btnR = $('btnRelawan'); const btnP = $('btnPenyintas');
            const viewR = $('viewRelawan'); const viewP = $('viewPenyintas');

            if(mode === 'relawan') {
                btnR.className = "px-6 py-2 rounded-full text-sm font-bold transition-all bg-green-600 text-white shadow";
                btnP.className = "px-6 py-2 rounded-full text-sm font-bold text-gray-500 hover:bg-gray-100 transition-all";
                viewR.classList.remove('hidden'); viewP.classList.add('hidden');
            } else {
                btnP.className = "px-6 py-2 rounded-full text-sm font-bold transition-all bg-orange-500 text-white shadow";
                btnR.className = "px-6 py-2 rounded-full text-sm font-bold text-gray-500 hover:bg-gray-100 transition-all";
                viewP.classList.remove('hidden'); viewR.classList.add('hidden');
            }
        };

        async function init() {
            try {
                const res = await fetch(API_URL);
                const json = await res.json();
                
                relawanData = json.data.relawan;
                penyintasData = json.data.penyintas;

                // KPI Global
                $('globalRelawan').innerText = relawanData.length;
                $('globalPenyintas').innerText = penyintasData.length;
                let totalJiwa = 0; penyintasData.forEach(p => totalJiwa += parseInt(p.JumlahKeluarga || 0));
                $('globalJiwa').innerText = totalJiwa;

                // --- RENDER RELAWAN ---
                // 1. Chart Program
                const pr = countTags(relawanData, 'AsalProgram');
                new Chart($('chartProgram'), {
                    type: 'bar',
                    data: { labels: pr.map(x=>x[0]), datasets: [{ label:'Jumlah', data: pr.map(x=>x[1]), backgroundColor: '#059669' }] },
                    options: { maintainAspectRatio: false, indexAxis: 'y', plugins:{legend:{display:false}} }
                });

                // 2. Chart Peran
                const peran = countTags(relawanData, 'PeranDiminati');
                createPie('chartPeran', peran, ['#3b82f6', '#8b5cf6', '#ef4444', '#f59e0b', '#10b981']);

                // 3. New Insights Charts
                const exp = countTags(relawanData, 'PengalamanBencana');
                createPie('chartPengalaman', exp, ['#10b981', '#ef4444']); // Hijau (Ya), Merah (Tidak)

                const dur = countTags(relawanData, 'DurasiSiap');
                createPie('chartDurasi', dur, ['#f59e0b', '#3b82f6', '#6366f1']);

                const trans = countTags(relawanData, 'Transportasi');
                createPie('chartTransport', trans, ['#8b5cf6', '#cbd5e1']);

                const bersedia = countTags(relawanData, 'BersediaDiLokasi');
                createPie('chartLokasiRelawan', bersedia, ['#16a34a', '#fca5a5']);

                // 4. Tabel Relawan Lengkap (Scrollable)
                const tR = $('tableRelawanBody');
                // Balik urutan agar yg baru diatas
                [...relawanData].reverse().forEach(r => {
                    tR.innerHTML += `
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="px-4 py-3 font-medium text-gray-900 truncate max-w-[150px]" title="${r.Nama}">${r.Nama}</td>
                        <td class="px-4 py-3 text-xs text-gray-500 truncate max-w-[120px]" title="${r.AsalProgram}">${r.AsalProgram||'-'}</td>
                        <td class="px-4 py-3 text-sm truncate max-w-[100px]">${r.Domisili}</td>
                        <td class="px-4 py-3 text-xs italic text-gray-600 truncate max-w-[200px] cursor-help" title="${r.DetailPengalaman || ''}">
                            ${r.DetailPengalaman || '-'}
                        </td>
                        <td class="px-4 py-3 text-xs italic text-gray-600 truncate max-w-[200px] cursor-help" title="${r.Motivasi || ''}">
                            ${r.Motivasi || '-'}
                        </td>
                        <td class="px-4 py-3 text-xs font-bold text-center">
                            <span class="${r.BersediaDiLokasi === 'Ya' ? 'text-green-600 bg-green-100' : 'text-red-600 bg-red-100'} px-2 py-1 rounded">
                                ${r.BersediaDiLokasi === 'Ya' ? 'Stay' : 'PP'}
                            </span>
                        </td>
                    </tr>`;
                });

                // --- RENDER PENYINTAS ---
                const kb = countTags(penyintasData, 'Kebutuhan');
                new Chart($('chartKebutuhan'), {
                    type: 'bar',
                    data: { labels: kb.map(x=>x[0]), datasets: [{ data: kb.map(x=>x[1]), backgroundColor: '#dc2626', label:'Request', borderRadius:4 }] },
                    options: { maintainAspectRatio: false, plugins:{legend:{display:false}} }
                });

                const loc = countTags(penyintasData, 'Lokasi');
                createPie('chartLokasiPenyintas', loc, ['#f97316','#f59e0b','#84cc16','#14b8a6']);

                // Tabel & Feed
                const tP = $('tablePenyintasBody');
                [...penyintasData].reverse().forEach(p => {
                    tP.innerHTML += `
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="px-4 py-3 font-medium text-gray-900">${p.NamaKK}</td>
                        <td class="px-4 py-3 text-center"><span class="font-bold text-orange-600">${p.JumlahKeluarga||'0'}</span></td>
                        <td class="px-4 py-3 text-xs text-gray-500">${p.Lokasi}</td>
                        <td class="px-4 py-3 text-xs text-red-600 truncate max-w-[100px]">${p.Kebutuhan||'-'}</td>
                    </tr>`;
                });

                const feed = $('feedKondisi');
                const stories = penyintasData.filter(p => p.GambaranKondisi && p.GambaranKondisi.length > 5).reverse();
                if(stories.length === 0) feed.innerHTML = `<p class="text-sm text-gray-400 italic text-center mt-10">Belum ada laporan.</p>`;
                stories.forEach(s => {
                    feed.innerHTML += `
                    <div class="bg-white p-3 rounded border border-gray-200 shadow-sm text-sm">
                        <div class="flex justify-between mb-1">
                            <span class="font-bold text-orange-700">${s.NamaKK}</span>
                            <span class="text-[10px] bg-gray-100 px-1 rounded text-gray-500">${s.Lokasi}</span>
                        </div>
                        <p class="text-gray-600 italic">"${s.GambaranKondisi}"</p>
                    </div>`;
                });

                $('loading').classList.add('hidden');
                $('viewRelawan').classList.remove('hidden');

            } catch (e) {
                console.error(e);
                $('loading').innerHTML = `<p class="text-red-500">Gagal load data.</p>`;
            }
        }

        init();
    </script>

    <style>
        .custom-scrollbar::-webkit-scrollbar { width: 6px; height: 6px; }
        .custom-scrollbar::-webkit-scrollbar-track { background: #f1f1f1; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    </style>
</Layout>