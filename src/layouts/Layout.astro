---
import '../styles/global.css';
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
    </head>
    <body class="bg-gray-50 text-gray-800 font-sans min-h-screen flex flex-col">
        
        <nav class="bg-green-700 text-white shadow-md sticky top-0 z-50">
            <div class="max-w-4xl mx-auto px-4 py-3 flex justify-center items-center">
                <a href="/" class="hover:opacity-90 transition transform hover:scale-105">
                    <img 
                        src="https://i0.wp.com/greatedunesia.id/wp-content/uploads/2024/10/logo-DD-GEArtboard-1.webp?fit=1024%2C1024&ssl=1" 
                        alt="Logo GREAT Edunesia" 
                        class="h-12 w-auto md:h-16" 
                    />
                </a>
            </div>
        </nav>
        
        <main class="max-w-4xl mx-auto p-4 flex-grow w-full">
            <slot />
        </main>

        <footer class="text-center p-6 text-gray-500 text-sm border-t mt-auto bg-white">
            &copy; 2026 GREAT Edunesia - Dompet Dhuafa. All rights reserved.
        </footer>
    </body>
</html>